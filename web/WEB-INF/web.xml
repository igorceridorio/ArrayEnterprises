<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ValidaLogin</servlet-name>
        <servlet-class>control.ValidaLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletVendas</servlet-name>
        <servlet-class>control.ServletVendas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletMain</servlet-name>
        <servlet-class>control.ServletMain</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletLote</servlet-name>
        <servlet-class>control.ServletLote</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletProduto</servlet-name>
        <servlet-class>control.ServletProduto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ValidaLogin</servlet-name>
        <url-pattern>/ValidaLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletVendas</servlet-name>
        <url-pattern>/ServletVendas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletMain</servlet-name>
        <url-pattern>/ServletMain</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLote</servlet-name>
        <url-pattern>/ServletLote</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletProduto</servlet-name>
        <url-pattern>/ServletProduto</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
